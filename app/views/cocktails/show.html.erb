<div class="card-product flex">
  <img src="<%= @cocktail.picture_url%>%" />
  <div class="card-product-infos">
    <h2>Product name</h2>
    <p>Product description with <strong>relevant info</strong> only.</p>
  </div>
</div>

<%= link_to 'New Dose', new_cocktail_dose_path(@cocktail), :class => "btn btn-primary shadow" %>
	<% @cocktail.doses.each do |dose| %>
    <div class="d-flex p-2">
        <%= dose.description %>
        <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Yeahh just do it!" } do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  <% end %>
